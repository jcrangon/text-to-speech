{% extends 'base.html.twig' %}

{% block title %}Speech | TTS{% endblock %}

{% block body %}
    <div id="headerwrap">
        <div class="container">
            <div class="row centered">
                <div class="col-sm-12">
                    <h1>Text-To-Speech</h1>
                    <h3>{% trans %}Choose{% endtrans %} :</h3>
                    <div class="row centered pt-5">
                        <div class="col-sm-6">
                            <a href="{{ path('app_tts_ttsfront') }}"><button type="button" class="btn btn-yellow btn-cta btn-lg">{% trans %}Use FRONTEND scripts{% endtrans %}</button></a>
                        </div>
                        <div class="col-sm-6">
                            <a href="{{ path('app_tts_ttsback') }}"><button id="toSTT" type="button" class="btn btn-yellow btn-cta btn-lg">{% trans %}Use BACKEND scripts{% endtrans %}</button></a>
                        </div>
                    </div>
                    <div class="row centered pt-3">
                        <div class="col-sm-12">
                            <a href="{{ path('app_home_index') }}"><img src="{{ asset('lib/images/goback.png') }}" alt="go back" height="50px" title="{% trans %}Go Back{% endtrans %}"/></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
